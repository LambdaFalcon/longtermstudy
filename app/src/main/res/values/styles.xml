<resources>

    <!-- Base application theme. -->
    <style name="dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="textColor">@color/colorTextDarkTheme</item>
        <item name="generalBackground">@color/generalBackgroundDarkTheme</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
</style>

    <!-- Other themes -->
    <style name="light" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLightTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLightTheme</item>
        <item name="colorAccent">@color/colorAccentLightTheme</item>
        <item name="textColor">@color/colorTextLightTheme</item>
        <item name="generalBackground">@color/generalBackgroundLightTheme</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="seekbarStyle" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@drawable/seekbar_tickmark</item>
        <item name="android:thumb">@drawable/seekbar_circle</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_bar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PackageNameFont" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>

